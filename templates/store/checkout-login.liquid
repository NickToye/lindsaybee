{% block content %}
<!-- TODO: Check markup -->
<!-- TODO: Style page -->
<main>

	<form data-ajax-handler="shop:onLogin" method="post" action="/checkout-start" class="customer-login">
		<h1>Customer login</h1>
		<p>Please login using your existing account</p>
		<fieldset class="form-control">
			<label class="control-label" for="login_email">Email</label>
			<input type="text" id="login_email" class="regular" name="email" placeholder="nick@pixelsandcode.co.uk">
		</fieldset>
		<fieldset class="form-control">
			<label class="control-label" for="login_password">Password</label>
			<input type="password" id="login_password" class="regular" name="password">
		</fieldset>
		<fieldset class="form-buttons">
			<div class="pull-left">
				<button type="submit" class="btn btn-primary" name="login" value="Login">
					Login
				</button>
				<a href="//pixelsandcode.lemonstand.com/password-restore" class="btn btn-small">
					Reset my password
				</a>
			</div>
			<input type="hidden" name="redirect" value="//pixelsandcode.lemonstand.com/checkout">
		</fieldset>
	</form>

	<aside>
		<section class="register">
			<h1>Want to Register?</h1>
			<p>Registration allows you to avoid filling in billing and shipping forms every time you checkout on this website. You'll also be able to track your orders with ease!</p>
			<div class="pull-left">
				<a href="#register" class="btn" data-toggle="modal">Register Now</a>
			</div>
		</section>
		<section class="guest-checkout">
			<h1>Checkout as Guest</h1>
			<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam</p>
			<div class="pull-left">
				<a href="/store/checkout" class="btn">Checkout as Guest</a>
			</div>
		</section>
	</aside>

	<div id="register" class="block modal hide fade" tabindex="-1">
		<form data-ajax-handler="shop:onSignup" data-validation-message="" method="post" action="/checkout-start">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h1>Register now</h1>
				<p>Registered users get access to features such as order history and so much more!</p>
			</div>
			<div class="modal-body">
				<fieldset class="form-control">
					<label class="control-label" for="signup[first_name]">First name</label>
					<input class="regular" type="text" id="signup[first_name]" name="signup[first_name]" value="">
				</fieldset>
			<fieldset class="form-control">
				<label class="control-label" for="signup[last_name]">Last name</label>
				<input class="regular" type="text" id="signup[last_name]" name="signup[last_name]" value="">
			</fieldset>
			<fieldset class="form-control">
				<label class="control-label" for="signup[email]">Email address</label>
				<input class="regular" type="text" id="signup[email]" name="signup[email]" value="">
			</fieldset>
			<fieldset class="form-control">
				<label class="control-label" for="signup[password]">Password</label>
				<input class="regular" type="password" id="signup[password]" name="signup[password]" autocomplete="off">
			</fieldset>
			<fieldset class="form-control">
				<label class="control-label" for="signup[password_confirmation]">Password confirm</label>
				<input class="regular" type="password" id="signup[password_confirmation]" name="signup[password_confirmation]" autocomplete="off">
			</fieldset>
				<input type="hidden" name="autologin" value="1">
				<input type="hidden" name="redirect" value="//pixelsandcode.lemonstand.com/registered">
			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-primary btn-small" name="signup" value="Register">
				Register now &nbsp; <i class="icon-ok"></i>
			</button>
			</div>
	</form>
	</div>

</main>

{% endblock %}